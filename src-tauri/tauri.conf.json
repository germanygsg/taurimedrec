{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Patient Management App",
  "version": "0.1.0",
  "identifier": "com.patientmanagement.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "windows": [
      {
        "title": "Patient Records",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/icon.ico"
    ],
    "category": "Medical",
    "publisher": "BSP Center Clinic",
    "shortDescription": "Patient Management System",
    "longDescription": "A comprehensive patient management system for medical clinics to manage patient records, appointments, treatments, and billing.",
    "windows": {
      "wix": null,
      "nsis": null,
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    },
    "createUpdaterArtifacts": false
  }
}